<%= render 'cocktails/navbar.html.erb' %>

<div class="card-product">
  <div class="row justify-content-center">
    <div class="col-12">

      <h1>Add an ingredient</h1>

      <%= simple_form_for [@cocktail, @dose] do |c| %>
        <%= c.input :description, label: "Quantity", input_html: { class: 'form-description' } %>
        <%= c.association :ingredient %>
        <%= c.submit "Add Ingredient" %>
      <% end %>

    </div>
  </div>
</div>
