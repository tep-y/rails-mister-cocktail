

<div class="container-fluid" >
  <div class="row text-center" id="background">
    <div class="col-12">
      <%= image_tag "freepour_logo.png", alt: "logo", class: "main-logo" %>
    </div>
    <div class="col-12">
      <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-info" %>
    </div>
  </div>


  <div class="row text-center">
    <div class="col-12" id="content-bar">
      <p>Your online repertoire for custom made cocktail recipes.</p>
    </div>
  </div>

</div>

<div class="container text-center">
  <div class="row">
    <div class="col-lg">
      <h1 class="cocktail-list">Cocktail List</h1>
      <%= image_tag "cocktail_icon.png", alt: "cocktail_icon", class: "menu-icon", width: "40px;" %>
      <ul>
        <% @cocktails.each do |cocktail| %>
          <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<div class="footer">
  <p>Icons made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></p>
</div>
