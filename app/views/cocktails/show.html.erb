<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= "#{dose.description} #{dose.ingredient.name}" %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  %>
  </p>
<% end %>

<%= cl_image_tag @cocktail.photo.key, width: 300 %>

<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Main Page", root_path  %></p>
